{
  "manifest_version": 3,
  "name": "E9Patch Binary Analysis",
  "version": "1.0.0",
  "description": "Binary analysis and live patching with DWARF debug support for C/C++ debugging in Chrome",
  "permissions": [
    "debugger",
    "activeTab",
    "storage",
    "nativeMessaging"
  ],
  "host_permissions": [
    "file:///*",
    "http://localhost/*",
    "ws://localhost/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "devtools_page": "devtools.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["e9patch.wasm", "e9patch.js", "panel.html", "panel.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
